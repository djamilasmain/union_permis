{% extends 'base.html.twig' %}

{% block title %}Reponse index
{% endblock %}

{% block body %}
	<h1>Reponse index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Contenu</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for reponse in reponses %}
				<tr>
					<td>{{ reponse.id }}</td>
					<td>{{ reponse.contenu }}</td>
					<td>
						<a href="{{ path('reponse_show', {'id': reponse.id}) }}">show</a>

					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>


{% endblock %}
